                </androidx.cardview.widget.CardView>

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
